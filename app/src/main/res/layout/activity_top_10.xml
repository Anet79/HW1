<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TopTenActivity"
    android:background="#fce4ec"
    android:keepScreenOn="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/top_10_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="TOP 10:"
            android:textColor="#880e4f"
            android:textSize="23sp" />

        <FrameLayout
            android:id="@+id/top_10_LAY_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#880e4f" />


        <FrameLayout
            android:id="@+id/top_10_LAY_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#880e4f" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/top_10_BTN_return"
            style="@style/Widget.Material3.FloatingActionButton.Large.Primary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_10_LAY_map"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/button_color"
            android:paddingBottom="10dp"

            android:text="Return"
            android:textColor="#FFFFFF"
            android:textSize="20dp"

            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_BTN_play_again"
            style="@style/Widget.Material3.FloatingActionButton.Large.Primary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_10_BTN_return"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/button_color"
            android:paddingBottom="10dp"

            android:text="PLAY AGAIN"
            android:textColor="#FFFFFF"
            android:textSize="20dp"

            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>